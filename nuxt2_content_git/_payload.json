uxt。","923/XCrOen.png",[12,303,11,304,305],"nuxt3","pwa","vite-pwa",{"text":307,"minutes":308,"time":309,"words":310},"6 min read",5.085,305100,1017,"2024-01-18T05:22:42.000Z","nuxt3_vite_pwa",1733112046461]